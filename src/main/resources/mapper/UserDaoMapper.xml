<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
		PUBLIC "-//mybatis.org/DTD Mapper 3.0/EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.dao.UserDao">
	<resultMap id="userMap" type="com.study.entity.User">
        <id property="userId" column="user_id" />
        <result property="account" column="account"/>
        <result property="password" column="password"/>
        <result property="realName" column="real_name"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    <insert id="insert" parameterType="com.study.entity.User" useGeneratedKeys="true" keyProperty="id">
	  insert into s_user(account, password,realName,createTime) values(#{account}, #{password}, #{realName}, #{createTime})
	</insert
	
	<select id="getByAccount" resultMap="userMap">
		select * from s_user where account=#{account}
	</select>
	<select id="getById" resultMap="userMap">
        SELECT * FROM s_user WHERE user_id = #{id}
    </select>
 
    <select id="getUserCount" resultType="int">
        SELECT COUNT(*) FROM s_user
    </select>
    
     <select id="findAll" resultMap="userMap">
        SELECT * FROM s_user
    </select>
</mapper>